#!/usr/bin/perl

use strict;
use warnings;

use Vim::Get;

my $vim = new Vim::Get;

my $operation = shift;


$vim->_init_index;

# maybe do a indexer to search
if( $operation eq 'search' ) {
    $vim->search( keyword => 'snippet', type => 'type' );
}

